<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConnectActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="애지중지"
        android:textColor="@color/mainColor"
        android:fontFamily="@font/maple"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        android:background="@drawable/border_line"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"></View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:text="세탁 방법"
        android:textStyle="bold"
        android:fontFamily="@font/maple"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="@+id/result"
        app:layout_constraintLeft_toLeftOf="@+id/result"
        app:layout_constraintRight_toRightOf="@+id/result"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/resultimg"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/textwash"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="물세탁:\n 물세탁 가능합니다"
        android:textSize="20dp"
        android:fontFamily="@font/maple"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/image"
        app:layout_constraintLeft_toLeftOf="@id/result"
        app:layout_constraintRight_toRightOf="@id/result"/>
    <TextView
        android:id="@+id/textblea"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="표백:\n 표백제 사용 불가능합니다"
        android:textSize="20dp"
        android:fontFamily="@font/maple"
        android:textColor="@color/mainColor"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textwash"
        app:layout_constraintLeft_toLeftOf="@id/result"
        app:layout_constraintRight_toRightOf="@id/result"/>
    <TextView
        android:id="@+id/textiron"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="다림질:\n 다림질 가능합니다"
        android:textSize="20dp"
        android:fontFamily="@font/maple"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textblea"
        app:layout_constraintLeft_toLeftOf="@id/result"
        app:layout_constraintRight_toRightOf="@id/result"/>
    <TextView
        android:id="@+id/textdry"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="드라이 클리닝:\n 드라이 클리닝 가능합니다"
        android:textSize="20dp"
        android:fontFamily="@font/maple"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textiron"
        app:layout_constraintLeft_toLeftOf="@id/result"
        app:layout_constraintRight_toRightOf="@id/result"/>
</androidx.constraintlayout.widget.ConstraintLayout>
